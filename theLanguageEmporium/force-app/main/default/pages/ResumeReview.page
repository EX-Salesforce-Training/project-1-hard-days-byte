<apex:page sidebar="false" showChat="false" showHeader="false" controller="RecruitingWizard" standardStylesheets="false">
    <apex:stylesheet value="{!URLFOR($Resource.StyleZip, '/css/index.css')}"/>
    
    <apex:PageBlock title="Application Review">
        <apex:form >
    	<apex:pageBlockSection title="Candidate Details" columns="2" >
        	<apex:pageBlockSection >
				<apex:inputField required="true" value="{!positionCandidate.First_Name__c}"/>
                <apex:inputField required="true" value="{!positionCandidate.Last_Name__c}"/>
               	<apex:inputField required="true" value="{!positionCandidate.Phone__c}"/>
               	<apex:inputField required="true" value="{!positionCandidate.Email__c}"/>
            </apex:pageBlockSection>
            <apex:pageBlockSection >
				<apex:inputField required="true" value="{!positionCandidate.Street_Address_1__c}"/>
                <apex:inputField value="{!positionCandidate.Street_Address_2__c}"/>
                <apex:inputField required="true" value="{!positionCandidate.State_Province__c}"/>
                <apex:inputField required="true" value="{!positionCandidate.Country__c}"/>
            	<apex:inputField required="true" value="{!positionCandidate.Zip_Postal_Code__c}"/>
            </apex:pageBlockSection>
            <apex:pageBlockSection >
                <apex:inputField required="true" value="{!positionCandidate.Education__c}"/>
                <apex:inputField required="true" value="{!positionCandidate.US_Citizen__c}"/>
                <apex:inputField value="{!positionCandidate.Visa_Required__c}"/>
           	</apex:pageBlockSection>
            <apex:commandButton value="Edit Candidate Information" action="{!candidatePage}"/>
        </apex:pageBlockSection>
        <apex:pageBlockSection title="Education and Experience" columns="1">
			 <apex:pageBlockSection title="Education">
                <!--- Create index variable --->
                <apex:variable var="index" value="1"/>
            	<apex:repeat value="{!education}" var="ed">
                    <!--- Title sub-section with index --->
            		<apex:pageBlockSection title="{!'Education #' + index}">
                    	<apex:inputField value="{!ed.School__c}"/>
                		<apex:inputField value="{!ed.Degree__c}"/>
                		<apex:inputField value="{!ed.Major__c}"/>
                		<apex:inputField value="{!ed.Date_Started__c}"/>
                		<apex:inputField value="{!ed.Date_Of_Graduation__c}"/>
                		<apex:inputField value="{!ed.Graduated__c}"/>
                    </apex:pageBlockSection>
                    <!--- Adjust index variable --->
                    <apex:variable var="index" value="{!VALUE(index) + 1}"/>
    			</apex:repeat>                
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Work Experience">
                <apex:variable var="index" value="1"/>
            	<apex:repeat value="{!experience}" var="exp">
            		<!--- Create index variable --->
                    <apex:pageBlockSection title="{!'Experience #' + index}">
                    	<apex:inputField value="{!exp.Company_Name__c}"/>
                		<apex:inputField value="{!exp.Company_Phone__c}"/>
                		<apex:inputField value="{!exp.Address__c}"/>
                		<apex:inputField value="{!exp.Reported_To__c}"/>
                		<apex:inputField value="{!exp.Start_Date__c}"/>
                		<apex:inputField value="{!exp.End_Date__c}"/>
                        <apex:inputField value="{!exp.Description__c}"/>
                    </apex:pageBlockSection>
            		<!--- Adjust index variable --->
                    <apex:variable var="index" value="{!VALUE(index) + 1}"/>
    			</apex:repeat>                
            </apex:pageBlockSection>
            <apex:commandButton action="{!experience}" value="Edit Education and Experience"/>
         </apex:pageBlockSection>
         <apex:pageBlockSection title="Position Questions">
         	<apex:repeat value="{!answerWrappers}" var="answer">
            	<apex:pageBlockSection >
	                <apex:outputText label="" value="{!answer.question.Question__c}"/>
                    <br/>
    	            <apex:inputField label="" value="{!answer.answer.Answer__c}"/>                
                </apex:pageBlockSection>
            </apex:repeat>
            <apex:commandButton value="Edit Position Questions" action="{!candidateQuestions}"/>
        </apex:pageBlockSection>
       	<apex:pageBlockSection title="Demographic Information">
                <apex:inputField label="What is your Gender?" value="{!positionDem.Gender__c}"/>
	            <apex:inputField label="How do you describe your ethnicity?" value="{!positionDem.Ethnicity__c}"/>
    	        <apex:inputField label="Are you a veteran?" value="{!positionDem.Veteran_Status__c}"/>
        	    <apex:inputField label="Do you have a disability?" value="{!positionDem.Disability__c}"/>
        		<apex:commandButton action="{!demographic}" value="Edit Demographic Information"/>
        </apex:pageBlockSection>
        <apex:commandButton action="{!demographic}" value="Previous Page"/>
        <apex:commandButton action="{!submit}" value="Submit"/>
    	</apex:form>
	</apex:PageBlock>
</apex:page>